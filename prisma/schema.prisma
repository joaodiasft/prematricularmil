// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  ADMIN
  SECRETARY
}

enum PreEnrollmentStatus {
  PENDING
  IN_ANALYSIS
  CONFIRMED
  WAITLIST
  REJECTED
}

enum StudyObjective {
  ENEM
  UFG_VESTIBULAR
  SCHOOL_REINFORCEMENT
  PUBLIC_COMPETITIONS
}

enum WritingLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum EducationLevel {
  MIDDLE_SCHOOL
  HIGH_SCHOOL
}

enum ClassShift {
  MORNING
  AFTERNOON
  NIGHT
}

enum PaymentMethod {
  CREDIT_CARD
  PIX
  CASH
}

enum PlanType {
  FOCO
  INTENSIVO
  EVOLUCAO
  APROVACAO_1
  APROVACAO_2
  NOTA_1000
}

enum SubjectType {
  REDACAO
  EXATAS
  GRAMATICA
  MATEMATICA
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  preEnrollments PreEnrollment[]
  actionLogs    ActionLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Subject {
  id          String      @id @default(cuid())
  name        String
  type        SubjectType
  price       Float
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  classes     Class[]

  @@map("subjects")
}

model Class {
  id              String         @id @default(cuid())
  code            String         @unique // R1, R2, EX1, G1, M1, M2, R5, R6
  name            String
  subjectId       String
  educationLevel  EducationLevel
  dayOfWeek       String         // Segunda-feira, Terça-feira, etc.
  startTime       String         // 19:00
  endTime         String         // 22:00
  maxCapacity     Int            @default(30)
  currentCapacity Int            @default(0)
  shift           ClassShift
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  subject         Subject        @relation(fields: [subjectId], references: [id])
  preEnrollments  PreEnrollment[]

  @@map("classes")
}

model Plan {
  id          String    @id @default(cuid())
  name        String    // Foco, Intensivo, Evolução, etc.
  type        PlanType
  modules     Int       // 1, 2, 3, 4, 5, 9
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  preEnrollments PreEnrollment[]

  @@map("plans")
}

model PreEnrollment {
  id                    String              @id @default(cuid())
  token                 String              @unique // R00001, R00002, etc.
  userId                String
  status                PreEnrollmentStatus @default(PENDING)

  // Dados básicos do aluno
  fullName              String
  email                 String
  age                   Int?
  phone                 String?
  whatsapp              String?
  instagram             String?
  currentSchool         String?
  currentGrade          String? // 9º ano, 1ª EM, etc.
  studyObjectives       StudyObjective[]
  writingLevel          WritingLevel?
  hasTakenENEM          Boolean             @default(false)
  enemScore             Float?

  // Dados dos responsáveis
  fatherName            String?
  fatherPhone           String?
  motherName            String?
  motherPhone           String?

  // Curso e turma
  classId               String
  planId                String
  paymentMethod         PaymentMethod?

  // Agendamento presencial
  confirmationDate      DateTime?
  confirmationShift     ClassShift?
  confirmationNotes     String?

  // Observações internas
  internalNotes         String?

  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt

  user                  User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  class                 Class                @relation(fields: [classId], references: [id])
  plan                  Plan                 @relation(fields: [planId], references: [id])

  @@map("pre_enrollments")
}

model SystemConfig {
  id                    String   @id @default(cuid())
  key                   String   @unique
  value                 String   @db.Text
  description           String?
  updatedAt             DateTime  @updatedAt
  updatedBy             String?

  @@map("system_configs")
}

model ActionLog {
  id                    String   @id @default(cuid())
  action                String   // PASSWORD_RESET_BY_TOKEN, etc.
  userId                String?
  token                 String?  // Token da pré-matrícula usado
  details               String?   @db.Text
  ipAddress             String?
  userAgent             String?
  createdAt             DateTime  @default(now())

  user                  User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("action_logs")
}

model PasswordResetAttempt {
  id                    String   @id @default(cuid())
  token                 String   // Token da pré-matrícula
  attempts              Int      @default(0)
  lastAttempt           DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@unique([token])
  @@map("password_reset_attempts")
}

